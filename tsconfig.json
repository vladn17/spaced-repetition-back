{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "incremental": true,
    "tsBuildInfoFile": "./buildcache/cache.tsbuildinfo",
  },
  "exclude": ["node_modules", "tests", "dist", "**/*spec.ts"],
  "include": ["./src"]
}
